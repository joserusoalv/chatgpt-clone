{
  "name": "chatgpt-clone-desktop",
  "version": "0.1.0",
  "type": "module",
  "description": "ChatGPT Clone â€” Angular 20 + Electron + Auto-update + Streaming SSE/Fetch",
  "author": "Tu Nombre <tu.email@example.com>",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint:fix": "ng lint --fix",
    "lint:check": "ng lint",
    "//---------------- Dev ----------------": "",
    "dev:server": "node server/server.js",
    "dev:web": "ng serve --proxy-config proxy.conf.json",
    "dev:electron:wait": "wait-on tcp:4200 && cross-env ANGULAR_URL=http://localhost:4200 electron ./electron/main.js",
    "dev": "concurrently -k -n server,web,electron -c auto \"npm:dev:server\" \"npm:dev:web\" \"npm:dev:electron:wait\"",
    "//---------------- Build Desktop ----------------": "",
    "build:web": "ng build --configuration production",
    "build:electron": "cp -r electron dist && cp -r server dist && echo 'ok'",
    "dist": "npm run build:web && electron-builder -c electron-builder.yml",
    "//---------------- Lint & Test ----------------": "",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "//---------------- Release CI ----------------": "",
    "release": "npm run dist",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@primeuix/themes": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.12",
    "highlight.js": "^11.11.1",
    "marked": "^12.0.2",
    "marked-highlight": "^2.2.2",
    "postcss": "^8.5.6",
    "primeng": "^20.0.1",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "angular-eslint": "20.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.2.1",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.40.0",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.chatgptclone",
    "productName": "ChatGPT Clone",
    "directories": {
      "output": "dist/electron",
      "buildResources": "electron/assets"
    },
    "files": [
      "dist/browser/**",
      "electron/**"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "your-org",
        "repo": "chatgpt-clone",
        "releaseType": "draft"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Your Company"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
